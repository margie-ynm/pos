<h3>This is the information of <%=@customer.name  %> </h3>

<h3>Update Details</h3>
<div class="well">
  <form class="" action="/customer_new/<%= @customer.id %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" name="name" class="form-control" value= <%=@customer.name %>>
    </div>
    <div class="form-group">
      <label for="email">email:</label>
      <input type="text" name="email" class="form-control" value= <%=@customer.email %>>
    </div>
    <button type="submit" class="btn btn-primary" name="button">Update customer</button>
  </form>

  <form class="" action="/customer/<%= @customer.id %>" method="post">
    <input name="_method" type="hidden" value="delete">
    <button type="submit" class="btn btn-danger">Delete customer</button>
  </form>
