<h3>New Product</h3>
<div class="well">
  <form class="" action="/product_new" method="post">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" name="name" class="form-control" placeholder="Enter product name">
    </div>
    <div class="form-group">
      <label for="price">Price:</label>
      <input type="text" name="price" class="form-control" placeholder="Enter product price">
    </div>
    <div class="form-group">
      <label for="inventory">Inventory:</label>
      <input type="text" name="inventory" class="form-control" placeholder="Enter product inventory">
    </div>
    <div class="form-group">
      <label for="description">Description:</label>
      <input type="text" name="description" class="form-control" placeholder="Enter product description">
    </div>
    <button type="submit" class="btn btn-primary" name="button">Add product</button>
  </form>
</div>
